import random

number = random.randint(1, 100)
guess = None
previous_guess = None
guesses = 0
guessed_numbers = []

while guess != number:
    guess = int(input("Guess a number between 1 and 100: "))
    guessed_numbers.append(guess)

    if previous_guess is not None:
        if abs(guess - number) < abs(previous_guess - number):
            if abs(guess - number) <= 10:  # Adjust threshold as needed
                print("You're getting much closer!")
            else:
                print("You're getting closer!")
        elif abs(guess - number) > abs(previous_guess - number):
            if abs(guess - number) >= 20:  # Adjust threshold as needed
                print("You're getting much farther!")
            else:
                print("You're getting farther!")

    if guess > number:
        print("Lower")
    elif guess < number:
        print("Higher")

    guesses += 1
    previous_guess = guess

print("Correct! You took", guesses, "guesses.")
print("Numbers you guessed:", guessed_numbers)

